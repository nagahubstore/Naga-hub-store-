<script>
  // config
  const upiId = "kaihub@ptyes";
  const upiReceiver = "Gamer Hub Store Zone";
  const whatsappNumber = "919233586975"; // no + sign

  function onGameChange(){
    // optional: change package options depending on game â€” currently any package works
  }

  function onPackageChange(){
    const sel = document.getElementById('package').value;
    const amountBox = document.getElementById('amountBox');
    const amountDisplay = document.getElementById('amountDisplay');
    const pkgText = document.getElementById('selectedPackageText');
    const qr = document.getElementById('qrImg');

    if(!sel){
      amountBox.style.display = 'none';
      return;
    }
    if(sel.startsWith("custom|")){
      // custom - wait for amount
      pkgText.textContent = "Custom package selected â€” enter amount below.";
      amountDisplay.textContent = "â‚¹0";
      qr.src = "";
      amountBox.style.display = 'block';
      return;
    }
    const [item, amt] = sel.split('|');
    const pretty = item.includes(" UC") || item.includes("Diamonds") || item.includes("Weekly") ? item : item;
    pkgText.textContent = pretty;
    amountDisplay.textContent = "â‚¹" + amt;
    amountBox.style.display = 'block';
    // update QR & pay link with this amount
    updateQrAndLink(amt);
  }

  function onCustomAmt(){
    const amtVal = document.getElementById('customAmt').value.trim();
    if(!amtVal || isNaN(amtVal)) return;
    document.getElementById('amountDisplay').textContent = "â‚¹" + amtVal;
    document.getElementById('selectedPackageText').textContent = "Custom package";
    updateQrAndLink(amtVal);
    document.getElementById('amountBox').style.display = 'block';
  }

  function updateQrAndLink(amount){
    // build UPI deeplink
    // upi://pay?pa=upiId&pn=receiver&am=amount&tn=note
    const pa = encodeURIComponent(upiId);
    const pn = encodeURIComponent(upiReceiver);
    const am = encodeURIComponent(amount);
    const tn = encodeURIComponent("Top-up payment for Gamer Hub Store Zone");
    const upiLink = `upi://pay?pa=${pa}&pn=${pn}&am=${am}&tn=${tn}`;
    // Use Google Chart API to generate QR image (this URL will render QR dynamically)
    const chl = encodeURIComponent(upiLink);
    const qrUrl = `https://chart.googleapis.com/chart?cht=qr&chs=300x300&chl=${chl}&chld=L|1`;
    document.getElementById('qrImg').src = qrUrl;
    // store last upi link globally for pay action
    window.lastUpiLink = upiLink;
  }

  function onPayNow(){
    if(!window.lastUpiLink){
      alert("Please select a package and amount first.");
      return;
    }
    // Try to open UPI intent first (mobile). If that fails, open UPI link in new tab (some browsers support)
    window.location.href = window.lastUpiLink;
    // also open a web fallback (some browsers don't allow upi://), so open the QR page separately
    setTimeout(()=> {
      const chl = encodeURIComponent(window.lastUpiLink);
      const fallback = `https://chart.googleapis.com/chart?cht=qr&chs=300x300&chl=${chl}&chld=L|1`;
      window.open(fallback, '_blank');
    }, 700);
  }

  function copyUpi(){
    navigator.clipboard.writeText(upiId).then(()=> {
      alert("UPI ID copied: " + upiId);
    }).catch(()=> {
      alert("Could not copy automatically â€” copy this UPI ID: " + upiId);
    });
  }

  function buildOrderText(){
    const game = document.getElementById('game').value || "[Not specified]";
    let pkgSel = document.getElementById('package').value || "";
    let pkgDisplay = "";
    if(pkgSel.startsWith("custom|")){
      pkgDisplay = "Custom â€” amount â‚¹" + (document.getElementById('customAmt').value.trim() || "[enter amount]");
    } else if(pkgSel){
      const parts = pkgSel.split('|');
      pkgDisplay = parts[0] + " â€” â‚¹" + parts[1];
    } else {
      pkgDisplay = "[Not specified]";
    }
    const player = document.getElementById('player').value.trim() || "[Player ID missing]";
    const server = document.getElementById('server').value.trim() || "N/A";
    const paymentMethod = document.getElementById('paymentMethod').value || "UPI";
    const txn = document.getElementById('txn').value.trim() || "N/A";
    const contact = document.getElementById('contact').value.trim() || "N/A";

    const amountText = (pkgSel && !pkgSel.startsWith("custom|")) ? ("â‚¹" + pkgSel.split('|')[1]) : (document.getElementById('customAmt').value.trim() ? "â‚¹" + document.getElementById('customAmt').value.trim() : "â‚¹0");

    const textPlain = [
      "Gamer Hub Store Zone â€” New Top-Up Order",
      "Game: " + game,
      "Package: " + pkgDisplay,
      "Amount paid: " + amountText,
      "Player ID: " + player,
      "Server: " + server,
      "Payment method: " + paymentMethod,
      "TXN/Ref: " + txn,
      "Customer contact: " + contact,
      "Note: I have paid â€” attaching payment screenshot now."
    ].join("\n");

    // WhatsApp encoded message (note: we'll encode before building URL)
    const waMessage = encodeURIComponent(
      "ðŸ“¦ New Top-Up Order\n" +
      "â€¢ Shop: Gamer Hub Store Zone\n" +
      "â€¢ Game: " + game + "\n" +
      "â€¢ Package: " + pkgDisplay + "\n" +
      "â€¢ Amount paid: " + amountText + "\n" +
      "â€¢ Player ID: " + player + "\n" +
      "â€¢ Server: " + server + "\n" +
      "â€¢ Payment method: " + paymentMethod + "\n" +
      "â€¢ TXN/Ref: " + txn + "\n" +
      "â€¢ Customer contact: " + contact + "\n\n" +
      "âœ… I have paid. Attaching payment screenshot now."
    );
    return {plain: textPlain, wa: waMessage};
  }

  function copyOrder(){
    const built = buildOrderText();
    navigator.clipboard.writeText(built.plain).then(()=> {
      alert("Order text copied to clipboard. Paste it in WhatsApp and attach screenshot.");
    }).catch(()=> {
      alert("Could not copy automatically. Please copy this text manually:\n\n" + built.plain);
    });
  }

  function sendWhatsApp(){
    const game = document.getElementById('game').value;
    const player = document.getElementById('player').value.trim();
    if(!game){ alert("Please choose a game."); return; }
    if(!player){ alert("Please enter the Player ID."); return; }
    const built = buildOrderText();
    // open WhatsApp chat with message
    const url = "https://wa.me/" + whatsappNumber + "?text=" + built.wa;
    window.open(url, '_blank');
  }

  // initialize defaults (optional)
  document.addEventListener('DOMContentLoaded', function(){
    // no package selected initially
  });
</script>
</body>
